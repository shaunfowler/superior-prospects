    "html-webpack-plugin": "2.29.0",
    "jest": "^22.4.3",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "moment": "^2.21.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "promise": "8.0.1",
